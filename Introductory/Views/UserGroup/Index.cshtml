@model IEnumerable<Introductory.Models.UserGroup>


@section Header {
    <style>
        .cust-bg {
            background-color: silver;
            color: green;
        }
    </style>
}

<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body cust-bg">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Group Name</label><br />
                                <input type="text" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label>Group Code</label><br />
                                <input type="text" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <br />
                                <button type="button" class="btn btn-primary">SEARCH</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mt-4">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Code</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserGroupID</td>
                                        <td>@item.UserGroupName</td>
                                        <td>@item.UserGroupCode</td>
                                        <td>
                                            <button type="button" class="btn btn-warning btn-sm">Edit</button>
                                            <button type="button" class="btn btn-danger btn-sm">Delete</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body cust-bg">
                        <div class="row">
                            <div class="col-md-3">Name</div>
                            <div class="col-md-9">
                                <input type="text" class="form-control txtName" />
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-3">Code</div>
                            <div class="col-md-9">
                                <input type="text" class="form-control txtCode" />
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-md-3"></div>
                            <div class="col-md-9 text-right">
                                <button type="button" class="btn btn-success" id="btnSave">SAVE</button>
                                <button type="button" class="btn btn-danger" id="btnCancel">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section LocalScripts {
    <script>
        $(document).ready(function () {})

        $(document).on("click", "#btnSave", function () { 
            var name = $('.txtName').val();
            var code = $('.txtCode').val();

            if (name == '') {
                alert('Enter User Group Name')
            } else if (code == '') {
                alert('Enter User Group Code')
            } else { 
                alert('GOOD')
            }
        })

        $(document).on('click', '#btnCancel', function () {
            alert('CANCELLED')
        })


    </script>
}
